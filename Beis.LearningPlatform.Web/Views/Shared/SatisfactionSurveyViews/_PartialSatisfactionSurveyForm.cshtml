@model Beis.LearningPlatform.Web.Models.SatisfactionSurveyViewModel
<form asp-action="SubmitSurvey" method="post" class="form">
    <h1 class="govuk-heading-xl">Your feedback</h1>
    <h2 class="govuk-heading-m">Satisfaction survey</h2>
    <div class="govuk-error-message" asp-validation-summary="All"></div>

    <div class="govuk-form-group">
        <fieldset class="govuk-fieldset">
            <legend class="govuk-fieldset__legend govuk-!-font-weight-bold">
                Overall, how did you feel about the service you received today?
            </legend>
            <div class="govuk-radios">
                @foreach (var option in Model.RatingOptions)
                {
                    <div class="govuk-radios__item">
                        <input class="govuk-radios__input" id="rating-@Model.RatingOptions.IndexOf(option)" asp-for="Rating" type="radio" value="@option">
                        <label class="govuk-label govuk-radios__label" for="rating-@Model.RatingOptions.IndexOf(option)">
                            @option
                        </label>
                    </div>
                }
            </div>
        </fieldset>
    </div>

    <div class="govuk-character-count">
        <div class="govuk-form-group">
            <h1 class="govuk-label-wrapper">
                <label class="govuk-label govuk-!-font-weight-bold" asp-for="Comment">
                    How could we improve this service?
                </label>
            </h1>
            <div id="feedback-hint-hint" class="govuk-hint">
                Do not include any personal or financial information, for example your National Insurance or credit card numbers.
            </div>
            <textarea asp-for="Comment" class="govuk-textarea character-counter" rows="5" data-charcounter-selector="#comment-char-count" maxlength="1200"></textarea>
            <div class="govuk-hint govuk-character-count__message">Comments are limited to 1200 characters</div>
        </div>
    </div>
    <input asp-for="Url" type="hidden" />
    <button id="btn-satisfactionsurveyviews-satisfactionsurveyform-send-feedback" type="submit" class="govuk-button govuk-button--start primary">
        Send feedback
        <svg xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false" class="govuk-button__start-icon">
            <path fill="#FFB000" d="M0 0h13l20 20-20 20H0l20-20z"></path>
        </svg>
    </button>
</form>