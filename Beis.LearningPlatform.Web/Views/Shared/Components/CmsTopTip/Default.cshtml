@model Beis.LearningPlatform.Web.Models.CmsTopTipViewModel
@if (!Model.HasContent)
{
    return;
}
<div id="@Model.Component.id" class="govuk-width-container">
    <div class="govuk-grid-row">
        <div class=" govuk-grid-column-two-thirds">
            <div class="toptip  govuk-!-margin-bottom-6 govuk-!-margin-top-6">
                <h2 class="govuk-heading-l">@Model.Component.header</h2>
                <div class="govuk-body">
                    @Html.Raw(Model.HtmlCopy)
                </div>
            </div>
        </div>
    </div>
</div>