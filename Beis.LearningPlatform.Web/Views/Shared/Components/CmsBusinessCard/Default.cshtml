@model Beis.LearningPlatform.Web.Models.CmsBusinessCardViewModel
@if (!Model.HasContent)
{
    return;
}
<div class="beis-business-card">
    <div class="govuk-width-container" id="@Model.Component.id">
        <div class="govuk-grid-row beis-row-flex">
            <div class="govuk-grid-column-one-half">
                <ul class="govuk-list beis-business-card__list">
                    <li><strong>Business name:</strong> @Model.Component.businessName</li>
                    @if (!string.IsNullOrWhiteSpace(Model.Component.sector))
                    {
                        <li><strong>Sector:</strong> @Model.Component.sector</li>
                    }
                    @if (!string.IsNullOrWhiteSpace(Model.Component.location))
                    {
                        <li><strong>Location:</strong> @Model.Component.location</li>
                    }
                    @if (!string.IsNullOrWhiteSpace(Model.Component.businessFounded))
                    {
                        <li><strong>Business founded:</strong> @Model.Component.businessFounded</li>
                    }
                    @if (!string.IsNullOrWhiteSpace(Model.VisitUrl))
                    {
                        <li><strong>Visit: </strong> <a id="link-cmsbusinesscard-visit" class="govuk-link govuk-link--no-visited-state" href="@Model.VisitUrl"> @Model.Component.visit</a></li>
                    }
                </ul>
            </div>
            <div class="govuk-grid-column-one-half">
                <img class="beis-business-card__logo" src="@Model.ImageUrl" alt="@Model.Component.image.alternativeText" />
            </div>
        </div>
    </div>
</div>

@if (Model.Component.contactSMEOptional ?? false)
{
    <div class="govuk-width-container beis-business-card__contact">
        <p class="govuk-body">Do you have a tech adoption success story you'd like to share? <br>
            Contact <a id="link-cmsbusinesscard-contact" href="mailto:sme.helptogrow@beis.gov.uk" class="govuk-link">
                sme.helptogrow@beis.gov.uk
            </a>
        </p>
    </div>
}
