<script>
    function onShare() {
        if (navigator.share) {
            navigator.share({
                title: '@Model.ShareTitle',
                url: '@Model.ShareLink'
            }).catch(console.error);
        } else {
            showElement('toolTip');
        }
        return false;
    }

    function showElement(el) {
        document.querySelector('#' + el).classList.remove("hide-element");
    }
    function hideElement(el) {
        document.querySelector('#' + el).classList.add("hide-element");
    }

    function onClose() {
        hideElement('toolTip');
        showElement('copy');
        hideElement('linkCopied');
        return false;
    }

    function onCopy() {
        hideElement('copy');
        showElement('linkCopied');
        navigator.clipboard.writeText('@(Model.ShareLink)');
        return false;
    }

    function setTabOrder() {
        if (navigator.share) {
            document.querySelector('#copy').setAttribute('tabIndex', -1);
            document.querySelector('#close').setAttribute('tabIndex', -1);
        }
        else {
            document.querySelector('#copy').removeAttribute("tabindex");
            document.querySelector('#close').removeAttribute("tabindex");
        }
    };
</script>