@model CmsLandingPageHeroBannerViewModel
@if (!Model.HasContent)
{
    return;
}

<div class="beis-landing-page-hero">
    <div class="govuk-width-container">
        <div class="govuk-grid-row beis-landing-page-hero__row">
            <div class="govuk-grid-column-two-thirds">
                <h1 class="govuk-heading-l beis-landing-page-hero__heading">
                    @Model.Header
                </h1>
                <div class="beis-landing-page-hero__content">
                    @Html.Raw(@Model.IntroHtml)
                </div>
            </div>
            <div class="govuk-grid-column-one-third">
                <vc:cms-image options='new CmsImageViewModel{ ImageUrl = Model.Component.image.url, CssClass = "beis-landing-page-hero__image" }' />
            </div>
        </div>
    </div>
</div>