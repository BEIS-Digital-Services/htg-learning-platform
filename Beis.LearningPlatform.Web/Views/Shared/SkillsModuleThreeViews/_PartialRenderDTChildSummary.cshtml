@model Beis.LearningPlatform.Web.Models.DiagnosticTool.DiagnosticToolForm
@{
    var elementInfo = Model.CurrentElement;
    var currentStep = elementInfo.CurrentStep;
    var currentElement = elementInfo.CurrentElement;
    var currentFormStepElement = elementInfo.CurrentFormStepElement;
}

<div class="govuk-body summary-grey govuk-!-padding-3">
    <p><strong>@currentFormStepElement.subText</strong></p>

    <p>@Model.steps[currentStep].elements[currentElement].answerOptions[0].ResultPageLabel</p>

    <p>@Model.steps[currentStep].elements[currentElement].answerOptions[0].value</p>

    <p>@Model.steps[currentStep].elements[currentElement].answerOptions[1].ResultPageLabel</p>
    <p>@Model.steps[currentStep].elements[currentElement].answerOptions[1].value</p>
    <p>@Model.steps[currentStep].elements[currentElement].answerOptions[2].ResultPageLabel</p>
    <p>@Model.steps[currentStep].elements[currentElement].answerOptions[2].value</p>
</div>