@model (Beis.LearningPlatform.Web.StrapiApi.Models.CMSPageComponent component, int componentIndex) 
@{
    var strTopSpaceClass = Model.component.topSpace != "nospace" ? "govuk-!-margin-top-6" : "";
    var strBottomSpaceClass = Model.component.bottomSpace != "nospace" ? "govuk-!-margin-bottom-6" : "";

    var targetURL = Model.component.url;
    if (string.IsNullOrEmpty(targetURL) && Model.component.media?.Count > 0)
    {
        targetURL = Model.component.media[0].url;
    }

    var imageURL = default(string);
    if (!string.IsNullOrEmpty(Model.component.abbr))
    {
        var loweredAbbr = Model.component.abbr.ToLower();
        switch (loweredAbbr)
        {
            case "pdf":
                imageURL = "/assets/images/pdf.svg";
                break;
            case "text":
                imageURL = "/assets/images/txt.svg";
                break;
            case "csv":
                imageURL = "/assets/images/csv.svg";
                break;
            case "word":
                imageURL = "/assets/images/doc.svg";
                break;
            case "pp":
                imageURL = "/assets/images/ppt.svg";
                break;
            case "excel":
                imageURL = "/assets/images/xls.svg";
                break;
            default:
                imageURL = "/assets/images/txt.svg";
                break;
        }
    }
}

<div class="beis-text" id="@("anchor" + Model.componentIndex)">
    @if (Model.component.media != null && Model.component.media.Count > 0)
    {
        <div class="govuk-width-container @strTopSpaceClass @strBottomSpaceClass">
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-two-thirds">
                    <section class="attachment embedded" id="attachment_@Model.component.media[0].name">
                        <div class="attachment-thumb">
                            <a id="link-cmspageviews-document-attachment-thumb" aria-hidden="true" class="thumbnail" tabindex="-1" href="@targetURL">
                                <img alt="" src="@imageURL">
                            </a>
                        </div>
                        <div class="attachment-details">
                            <h3 class="title govuk-!-font-size-27 govuk-!-font-weight-regular">
                                <a id="link-cmspageviews-document-attachment-details" class="govuk-link" href="@targetURL">
                                    @Model.component.title
                                </a>
                            </h3>
                            <p class="govuk-body">
                                <span class="type">
                                    <abbr title="@Model.component.media[0].mime">@Model.component.abbr</abbr>
                                </span>,
                                <span class="file-size">@Model.component.media[0].size KB</span>
                            </p>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    }

</div>